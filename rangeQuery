USE DATAPROJ 
GO

---this query selects for the range of all electric vehicles in the list in descending order, filtering out 0's using the where statement.

SELECT 
	AVG(Electric_Range) AS Average_Range,
	Make,
	Model,
	COUNT(Model) AS Sample_Size 
FROM dbo.Electric_Vehicle_Population_Data 
WHERE Electric_Range > 1
GROUP BY Make, Model
ORDER BY average_range DESC; 

